---
// import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
// import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
// import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = { title: 'Partners' };
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="April 01"
    title="RejectMe™ Gently"
    subtitle="RejectMe™ turns every 'no' into 'you’re amazing, just not today.' Because your inbox deserves a little kindness, too. It’s rejection, reimagined — with empathy, humor, and heart.</br></br><strong>Find out more below or contact us today!</strong>"
    actions={[{ variant: 'primary', target: '_self', text: 'Contact', href: '/contact' }]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    image={{ src: '~/assets/images/rejectme_aprilfools.png', alt: 'Features Image' }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2 text-center">
        RejectMe™
      </h3>
      <h5 class="text-2m tracking-tight dark:text-white sm:text-3m mb-2">
        🎉 She Leads Product proudly presents… RejectMe™ (gently) 💌 A revolutionary ChatGPT plugin crafted just for
        you, in delightful collaboration with OpenAI. Sick of blunt, soul-crushing rejection emails? RejectMe™ rewrites
        them with kindness, empathy, and a sprinkle of magic — so even a “no” feels like a standing ovation.   
      </h5>
      <h5 class="text-center">
        Rejection?
         <br />
      </h5>
      <h5 class="text-center">Nah. Think of it as a personalized pep talk from the universe.</h5>
      <h5 class="text-center">✨ No setup. No tears. Just vibes.</h5>
      <h5 class="text-center" style="color: orange;">Okay, you got us — RejectMe™ isn’t real (yet).
        But wouldn’t it be nice?
        Happy April Fools from She Leads Product.</h5>
    </Fragment>
  </Content>
</Layout>
