---
import Layout from '~/layouts/Layout.astro';
import { getHomePermalink } from '~/utils/permalinks';

const title = `Thank You!`;
---
<Layout metadata={{ title }}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-9xl">
          <span class="sr-only">Thanks</span>
          <span class="text-primary">ðŸ˜Š</span>
        </h2>
        <p class="text-3xl font-semibold md:text-3xl">Thank you for reaching out!</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">
          Your message is important to us. Just like managing a product backlog, we'll prioritize and address your input to ensure continuous improvement and innovation.
        </p>
        <a rel="noopener noreferrer" href={getHomePermalink()} class="btn ml-4">
          Back to homepage
        </a>
        <a rel="noopener noreferrer" href="/contact" class="btn ml-4 bg-accent text-white">
          Send another message
        </a>
      </div>
    </div>
  </section>
</Layout>

